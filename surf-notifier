import os
import requests

# your existing selenium surf scraping goes here...

# Format message
surf_text = (
    f"Porthcawl Rest Bay. Next best surf: {next_best_surf}\n"
    f"Wave height: {wave_height}\n"
    f"Wave period: {wave_period}\n"
    f"Summary: {paragraph}\n"
    "Check tide times: https://www.bbc.co.uk/weather/coast-and-sea/tide-tables/11/512"
)

print(surf_text)

# Send Telegram message
def send_telegram_message(text):
    token = os.getenv("TELEGRAM_TOKEN")
    chat_id = os.getenv("TELEGRAM_CHAT_ID")
    url = f"https://api.telegram.org/bot{token}/sendMessage"
    payload = {
        "chat_id": chat_id,
        "text": text
    }
    response = requests.post(url, data=payload)
    print("Telegram status:", response.status_code)

send_telegram_message(surf_text)
